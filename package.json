    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev:build-server": "NODE_ENV=development webpack --config webpack.server.js --mode=development -w",
    "deploy:build-server": "NODE_ENV=production webpack --config webpack.server.js",
    "server:start": "nodemon ./server-build/index.js",
    "dev": "npm run build && npm run dev:build-server && npm run server:start",
    "deploy": "npm run build && npm run deploy:build-server && npm run server:start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.0",
    "ignore-styles": "^5.0.1",
    "nodemon": "^2.0.4",
    "svg-url-loader": "^6.0.0",
